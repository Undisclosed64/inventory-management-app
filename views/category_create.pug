extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category name:
      input#name.form-control(type='text', placeholder='Kids clothes,women\'s dresses etc' name='name' value=(category===undefined ? '' : category.name))
      br
      label(for='name') Category description:
      input#description.form-control(type='text', placeholder='This category has dresses for women' name='description'  value=(category===undefined ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
